<Page
    x:Class="NotesApp.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NotesApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="50*" />
            <RowDefinition Height="160*" />
        </Grid.RowDefinitions>

        <Button HorizontalAlignment="Stretch" Content="New Note" Click="ButtonNewNote_OnClick" />
        <Button Grid.Row="1" HorizontalAlignment="Stretch" Content="Read Notes" Click="ButtonReadNotes_OnClick" />
        <Button Grid.Row="2" HorizontalAlignment="Stretch" Content="Settings" Click="ButtonSettings_OnClick" />
        <Button Grid.Row="3" HorizontalAlignment="Stretch" Content="Search Notes" Click="ButtonSearchNotes_OnClick" />
        <Image Grid.Row="4" Source="../Assets/note.png" />
    </Grid>
</Page>